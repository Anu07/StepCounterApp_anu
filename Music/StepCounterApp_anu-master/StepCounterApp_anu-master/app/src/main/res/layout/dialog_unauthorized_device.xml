<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:orientation="vertical">

    <com.sd.src.stepcounterapp.utils.CustomTextView
        android:id="@+id/unauthorized_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="@string/unathorized_msg"
        android:textAlignment="center"
        app:appfont="montserrat_semibold.ttf" />
    <View
        android:layout_width="match_parent"
        android:background="@color/lightGray"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_height="0.5dp"
        />
    <com.sd.src.stepcounterapp.utils.CustomButton
        android:id="@+id/contactBttn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:textAllCaps="false"
        android:textSize="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="#0676FE"
        app:appButtonfont="montserrat_semibold.ttf"
        android:text="Contact Admin"/>
    <View
        android:layout_width="match_parent"
        android:background="@color/lightGray"
        android:layout_height="0.5dp"
        />
    <com.sd.src.stepcounterapp.utils.CustomButton
        android:id="@+id/cancelBttn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@null"
        android:textAllCaps="false"
        android:textColor="#0676FE"
        android:textSize="@dimen/_15sdp"
        app:appButtonfont="montserrat_semibold.ttf"
        android:text="Cancel"/>
</LinearLayout>