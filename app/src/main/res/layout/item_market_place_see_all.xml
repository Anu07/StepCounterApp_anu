<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_10ssp"
        android:layout_margin="@dimen/_5sdp"
        android:elevation="@dimen/_10ssp"
        android:layout_height="wrap_content">


    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/parentLay"
            android:layout_height="wrap_content">
        <FrameLayout android:layout_width="match_parent"
                     android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_160sdp"
                    android:src="@drawable/female"/>
            <ImageView
                    android:id="@+id/wishBttnall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="@dimen/_25sdp"
                    android:background="@drawable/circle_bg_white"
                    android:cropToPadding="true"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="right"
                    android:layout_margin="@dimen/_20sdp"
                    app:layout_constraintBottom_toBottomOf="@+id/imgProductFirst"
                    app:layout_constraintRight_toRightOf="@+id/imgProductFirst"
                    android:src="@drawable/featured"/>

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_gravity="bottom"
                          android:weightSum="2"
                          android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_height="wrap_content">
                    <com.sd.src.stepcounterapp.utils.CustomTextView
                            android:id="@+id/txtProductName"
                            android:layout_width="wrap_content"
                            android:textAllCaps="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            android:text="The Himalayan"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp"
                            app:appfont="montserrat_semibold.ttf"/>

                    <com.sd.src.stepcounterapp.utils.CustomTextView
                            android:id="@+id/txtShortDesc"
                            android:layout_width="wrap_content"
                            android:textAllCaps="true"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:text="50% Off Wellness Ret..."
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10ssp"
                            app:appfont="montserrat_semibold.ttf"/>

                </LinearLayout>
                <LinearLayout android:layout_width="0dp"
                              android:layout_gravity="right"
                               android:gravity="right|center_vertical"
                              android:layout_weight="1"
                              android:layout_height="wrap_content">
                    <com.sd.src.stepcounterapp.utils.CustomTextView
                            android:id="@+id/txtToken"
                            android:layout_width="wrap_content"
                            android:textAllCaps="true"
                            android:layout_height="wrap_content"
                            android:text="3000 TKS"
                            android:ellipsize="end"
                            android:padding="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/full_round_border_green"
                            android:textColor="@color/white"
                            android:maxLines="1"
                            android:textSize="@dimen/_8ssp"
                            app:appfont="montserrat_semibold.ttf"/>
                </LinearLayout>


            </LinearLayout>


        </FrameLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>