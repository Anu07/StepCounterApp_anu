<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:elevation="@dimen/_10ssp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_10ssp">


    <LinearLayout
        android:id="@+id/parentLaypop"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/testdiet" />
            <com.sd.src.stepcounterapp.utils.CustomTextView
                android:id="@+id/txtQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/green_txt"
                android:background="@drawable/white_round_corners_full"
                android:textSize="@dimen/_10ssp"
                app:appfont="montserrat_regular.ttf"
                tools:text="10 left" />
            <ImageView
                android:id="@+id/wishBttnall"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_margin="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:background="@drawable/circle_bg_white"
                android:cropToPadding="true"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/featured"
                app:layout_constraintBottom_toBottomOf="@+id/imgProductFirst"
                app:layout_constraintRight_toRightOf="@+id/imgProductFirst" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#60000000"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_3sdp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_weight="1.3"
                    android:orientation="vertical">

                    <com.sd.src.stepcounterapp.utils.CustomTextView
                        android:id="@+id/txtProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        tools:text="The Himalayan"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp"
                        app:appfont="montserrat_semibold.ttf" />

                    <com.sd.src.stepcounterapp.utils.CustomTextView
                        android:id="@+id/txtShortDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="50% Off Wellness Ret..."
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        app:appfont="montserrat_semibold.ttf" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:gravity="right"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <com.sd.src.stepcounterapp.utils.CustomTextView
                        android:id="@+id/txtToken"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/full_round_border_green"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:padding="@dimen/_3sdp"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8ssp"
                        app:appfont="montserrat_semibold.ttf"
                        tools:text="3000 TKNS" />


                </LinearLayout>


            </LinearLayout>


        </FrameLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>