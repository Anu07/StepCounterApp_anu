<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
             >

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
               >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/_30sdp">


        <ImageView android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="15"
                   android:layout_alignParentLeft="true"
                   android:src="@drawable/kisspng_fitbit"/>

        <LinearLayout android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="20"
                      android:padding="@dimen/_5sdp"
                      android:layout_gravity="center_vertical"
                      android:orientation="vertical">

            <TextView android:id="@+id/tv_sync"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textStyle="bold"
                      android:text="Sync now"/>


            <TextView android:id="@+id/tv_sync_date_time"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="dd/mm/yy , 00:00 AM"/>


        </LinearLayout>



    </LinearLayout>


        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"/>


            <Button android:id="@+id/btnChangeTracker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:text="Change Tracker"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:padding="@dimen/_15sdp"
                    android:background="@drawable/curve_button"
                    android:layout_gravity="center_horizontal"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:padding="@dimen/_15sdp">


            <ImageView android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:src="@drawable/notification"/>

            <TextView android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="5"
                      android:text="@string/notification_setting"/>


            <ImageView android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:src="@drawable/right_arrow"/>

        </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:padding="@dimen/_15sdp">


                <ImageView android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:src="@drawable/privacy_policy"/>

                <TextView android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="5"
                          android:text="@string/privacy"/>


                <ImageView android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:src="@drawable/right_arrow"/>

            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:padding="@dimen/_15sdp">


                <ImageView android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:src="@drawable/terms_of_service"/>

                <TextView android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="5"
                          android:text="@string/terms_of_service"/>


                <ImageView android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:src="@drawable/right_arrow"/>

            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>