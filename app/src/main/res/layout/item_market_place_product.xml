<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        app:cardCornerRadius="@dimen/_5ssp"
        android:layout_margin="@dimen/_5sdp"
        android:elevation="@dimen/_10ssp"
        android:id="@+id/parentLay"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="@dimen/_150sdp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:src="@drawable/body_clouds_early"/>

        <com.sd.src.stepcounterapp.utils.CustomTextView
                android:id="@+id/txtProductName"
                android:layout_width="wrap_content"
                android:textAllCaps="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:text="The Himalayan"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/arrow_color"
                android:textSize="@dimen/_12ssp"
                app:appfont="montserrat_semibold.ttf"/>

        <com.sd.src.stepcounterapp.utils.CustomTextView
                android:id="@+id/txtShortDesc"
                android:layout_width="wrap_content"
                android:textAllCaps="true"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="50% Off Wellness Ret..."
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_10ssp"
                app:appfont="montserrat_semibold.ttf"/>

        <com.sd.src.stepcounterapp.utils.CustomTextView
                android:id="@+id/txtToken"
                android:layout_width="wrap_content"
                android:textAllCaps="true"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="3000 TKS"
                android:ellipsize="end"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textColor="@color/gray_text"
                android:maxLines="1"
                android:textSize="@dimen/_8ssp"
                app:appfont="montserrat_semibold.ttf"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>