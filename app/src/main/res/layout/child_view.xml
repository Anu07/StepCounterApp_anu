<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
>

    <com.sd.src.stepcounterapp.utils.CustomTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/titleTxt"
            android:text=""
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            android:textColor="@color/_323232"
            android:layout_height="match_parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />


    <com.sd.src.stepcounterapp.utils.CustomTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/currentTransaction"
            android:text=""
            android:textSize="@dimen/_16sdp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/titleTxt" app:layout_constraintTop_toTopOf="@+id/titleTxt"/>


    <com.sd.src.stepcounterapp.utils.CustomTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/time"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/a8a8a8"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="@+id/titleTxt" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/titleTxt"/>

    <com.sd.src.stepcounterapp.utils.CustomTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/closingToken"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/a8a8a8"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/time"
            app:layout_constraintTop_toTopOf="@+id/time" app:layout_constraintVertical_bias="0.0"
    />

    <com.sd.src.stepcounterapp.utils.CustomTextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/transactionID"
            android:text=""
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/a8a8a8"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="@+id/time"
            android:layout_marginTop="3dp" app:layout_constraintTop_toBottomOf="@+id/time"/>


    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:alpha="0.16"
          android:background="@color/_707070" app:layout_constraintTop_toBottomOf="@+id/transactionID"
          android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>