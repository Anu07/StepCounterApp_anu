<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".fragments.WalletFragment"
              android:id="@+id/linearLayout2">


    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_margin="@dimen/_10sdp"
                                       android:background="@color/white"
                                       app:cardCornerRadius="@dimen/_5ssp"
                                       android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.sd.src.stepcounterapp.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:appfont="montserrat_regular.ttf"
                    android:textAlignment="center"
                    android:textColor="#A8A8A8"
                    android:textSize="@dimen/_14sdp"
                    android:text="Total Earnings"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:id="@+id/customTextView3"/>


            <com.sd.src.stepcounterapp.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tokensVal"
                    app:appfont="montserrat_semibold.ttf"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_28sdp"
                    android:text="3256" app:layout_constraintStart_toStartOf="@+id/customTextView3"
                    app:layout_constraintTop_toBottomOf="@+id/customTextView3"/>

            <com.sd.src.stepcounterapp.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:appfont="montserrat_regular.ttf"
                    android:textAlignment="center"
                    android:textColor="#A8A8A8"
                    android:textSize="@dimen/_12sdp"
                    android:text="Tokens"
                    android:id="@+id/customTextView2"
                    app:layout_constraintStart_toEndOf="@+id/tokensVal"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="60dp"/>


            <com.sd.src.stepcounterapp.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:appfont="montserrat_regular.ttf"
                    android:textAlignment="center"
                    android:textColor="#A8A8A8"
                    android:gravity="center"
                    android:textSize="@dimen/_10ssp"
                    android:text="Updated"
                    android:id="@+id/customTextView4"
                    app:layout_constraintStart_toStartOf="@+id/tokensVal"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tokensVal"
                    android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"/>

            <com.sd.src.stepcounterapp.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:appfont="montserrat_semibold.ttf"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/txtUpdateTime"
                    android:textSize="@dimen/_10ssp"
                    android:text="20.07.2019 | 11:31 AM"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/customTextView4" android:layout_marginStart="8dp"/>

            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="vertical"
                          android:gravity="center"
                          android:layout_height="wrap_content"
                          app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                          android:layout_marginEnd="32dp"
                          app:layout_constraintBottom_toBottomOf="parent">

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/ic_history"/>


                <com.sd.src.stepcounterapp.utils.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:appfont="montserrat_semibold.ttf"
                        android:textAlignment="center"
                        android:textColor="@color/blue_txt"
                        android:textSize="@dimen/_10ssp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="HISTORY"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_margin="@dimen/_10sdp"
                                       android:padding="@dimen/_10sdp"
                                       android:background="@color/white"
                                       app:cardCornerRadius="@dimen/_5ssp"
                                       android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.sd.src.stepcounterapp.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:appfont="montserrat_regular.ttf"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14sdp"
                    android:text="Number of Steps"
                    android:id="@+id/customTextView5"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"/>


            <com.sd.src.stepcounterapp.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:appfont="montserrat_regular.ttf"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_14sdp"
                    android:text="Tokens Generated"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:id="@+id/customTextView6"/>


            <com.sd.src.stepcounterapp.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:appfont="montserrat_semibold.ttf"
                    android:textAlignment="center"
                    android:textColor="@color/blue_txt"
                    android:textSize="@dimen/_28ssp"
                    android:text="8,271"
                    app:layout_constraintTop_toBottomOf="@+id/customTextView5" android:id="@+id/customTextView7"
                    app:layout_constraintStart_toStartOf="@+id/customTextView5"/>


            <View android:layout_width="@dimen/_1sdp"
                  app:layout_constraintEnd_toStartOf="@+id/customTextView6"
                  android:layout_marginEnd="8dp"
                  app:layout_constraintStart_toEndOf="@+id/customTextView5" android:layout_marginStart="8dp"
                  app:layout_constraintTop_toTopOf="@+id/customTextView6" android:id="@+id/view2"
                  android:layout_height="0dp"
                  app:layout_constraintBottom_toBottomOf="@+id/customTextView11"/>


            <com.sd.src.stepcounterapp.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:appfont="montserrat_semibold.ttf"
                    android:textAlignment="center"
                    android:textColor="#8DC540"
                    android:textSize="@dimen/_28ssp"
                    android:text="08"
                    app:layout_constraintStart_toStartOf="@+id/customTextView6"
                    app:layout_constraintTop_toBottomOf="@+id/customTextView6" android:id="@+id/customTextView11"/>

            <com.sd.src.stepcounterapp.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:appfont="montserrat_regular.ttf"
                    android:textAlignment="center"
                    android:textColor="#A8A8A8"
                    android:gravity="center"
                    android:textSize="@dimen/_10ssp"
                    android:text="Today*"
                    app:layout_constraintStart_toStartOf="@+id/customTextView7"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/customTextView7" android:id="@+id/customTextView10"/>

            <com.sd.src.stepcounterapp.utils.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:appfont="montserrat_semibold.ttf"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_10ssp"
                    android:background="@drawable/_blue_bottom_round"
                    android:text="CONVERT STEPS INTO TOKENS"
                    android:padding="@dimen/_5sdp"
                    app:layout_constraintStart_toStartOf="@+id/customTextView7"
                    android:id="@+id/customTextView8"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/customTextView10"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView android:layout_width="match_parent"
                                           android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/llCategory"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/gray_backGround"
                android:layout_height="match_parent">

            <LinearLayout
                    android:id="@+id/llWishList"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:layout_height="wrap_content">

                <com.sd.src.stepcounterapp.utils.CustomTextView
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:drawableRight="@drawable/ic_info_grey"
                        android:visibility="visible"
                        android:text="WISH LIST"
                        android:drawablePadding="@dimen/_10sdp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingStart="@dimen/_5sdp"
                        android:textSize="@dimen/_12ssp"
                        app:appfont="montserrat_semibold.ttf"/>

                <com.sd.src.stepcounterapp.utils.CustomTextView
                        android:id="@+id/txtSeeAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="See less"
                        android:layout_weight="1"
                        android:textColor="@color/gray_text"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:textSize="@dimen/_12ssp"
                        app:appfont="montserrat_semibold.ttf"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvWishList"
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="wrap_content"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:layout_height="wrap_content">

                <com.sd.src.stepcounterapp.utils.CustomTextView
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:drawableRight="@drawable/ic_info_grey"
                        android:visibility="visible"
                        android:text="REDEEMED"
                        android:drawablePadding="@dimen/_10sdp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingStart="@dimen/_5sdp"
                        android:textSize="@dimen/_12ssp"
                        app:appfont="montserrat_semibold.ttf"/>

                <com.sd.src.stepcounterapp.utils.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="See less"
                        android:layout_weight="1"
                        android:textColor="@color/gray_text"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:textSize="@dimen/_12ssp"
                        app:appfont="montserrat_semibold.ttf"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="match_parent"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>