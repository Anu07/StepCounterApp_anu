<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/ll_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/white"
                android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/white"
            android:weightSum="3"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/img_back"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_8sdp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_arrow_back"/>

      <!--  <ImageView
                android:id="@+id/img_back"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_launcher"/>-->

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.8"
                android:layout_gravity="center_horizontal"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:src="@drawable/hayatechlogo"
                    android:layout_gravity="center_vertical|center"/>

        </LinearLayout>


        <com.sd.src.stepcounterapp.utils.CustomTextView
                android:layout_width="0dp"
                android:text="Read All"
                android:layout_weight="0.7"
                android:textSize="@dimen/_14ssp"
                android:id="@+id/readAll"
                android:gravity="center_vertical|right"
                app:appfont="montserrat_regular.ttf"
                android:paddingRight="@dimen/_10sdp"
                android:layout_height="match_parent"/>


        <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:padding="@dimen/_10sdp"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:src="@mipmap/ic_logo" />-->

    </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_alignParentBottom="true"
          android:background="@color/gray_text"/>

</RelativeLayout>