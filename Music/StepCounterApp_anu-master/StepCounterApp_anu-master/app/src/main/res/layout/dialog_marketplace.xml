<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:padding="@dimen/_15sdp"
              android:layout_gravity="bottom"
              android:background="@color/background_litegray"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="350dp">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="wrap_content">
                <LinearLayout android:layout_width="0dp"
                              android:layout_weight="1"
                              android:orientation="vertical"
                              android:layout_height="wrap_content">
                    <com.sd.src.stepcounterapp.utils.CustomTextView
                            android:id="@+id/txtName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Sahi Sponsored Challenge"
                            android:ellipsize="end"
                            android:textColor="@color/colorBlack"
                            android:maxLines="2"
                            android:textSize="@dimen/_18ssp"
                            app:appfont="montserrat_regular.ttf"/>

                    <com.sd.src.stepcounterapp.utils.CustomTextView
                            android:id="@+id/txtDepartment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Sahi Sponsored Challenge"
                            android:ellipsize="end"
                        android:layout_marginLeft="@dimen/_2sdp"
                            android:textColor="@color/colorBlack"
                            android:maxLines="1"
                            android:textSize="@dimen/_8ssp"
                            app:appfont="montserrat_regular.ttf"/>
                </LinearLayout>

                <com.sd.src.stepcounterapp.utils.CustomTextView
                        android:id="@+id/txtToken"
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"
                        tools:text="3000 TKNS"
                        android:ellipsize="end"
                        android:layout_gravity="right|top"
                        android:padding="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/full_round_border_green"
                        android:textColor="@color/white"
                        android:maxLines="1"
                        android:textSize="@dimen/_8ssp"
                        app:appfont="montserrat_semibold.ttf"/>

            </LinearLayout>


            <ImageView android:id="@+id/challengeImg"
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/_180sdp"/>

            <com.sd.src.stepcounterapp.utils.CustomTextView
                    android:id="@+id/txtDetailLong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Give yourself something to celebrate with us! A new Personal Best. Increase your average daily step distance by 1k for 1 month &amp; choose any featured SAHI REWARD for FREE."
                    android:textColor="@color/gray_text"
                    android:maxLength="150"
                    android:textAlignment="center"
                    android:ellipsize="end"
                    android:textSize="@dimen/_12ssp"
                    app:appfont="montserrat_regular.ttf"/>


            <include layout="@layout/vendor_view"/>

        </LinearLayout>


    </ScrollView>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:background="@color/background_litegray"
                  android:layout_marginTop="@dimen/_20sdp"
                  android:layout_height="wrap_content">

        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="0.3"
                      android:layout_gravity="center_vertical"
                      android:background="@drawable/full_border"
                      android:layout_marginRight="@dimen/_5sdp"
                      android:layout_height="match_parent">
            <ImageView android:id="@+id/wishlistImg"
                       android:background="@color/white"
                       android:src="@drawable/featured"
                       android:layout_width="match_parent"
                       android:padding="@dimen/_8sdp"
                       android:layout_gravity="center_vertical"
                       android:layout_height="match_parent"/>
        </LinearLayout>


        <com.sd.src.stepcounterapp.utils.CustomButton
                android:id="@+id/btnPurchaseStart"
                android:text="@string/purchase_now"
                android:layout_width="0dp"
                android:layout_weight="1.7"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/white"
                android:padding="@dimen/_10sdp"
                app:appButtonfont="montserrat_medium.ttf"
                android:background="@drawable/button_background"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
